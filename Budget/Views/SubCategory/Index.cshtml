@model IEnumerable<Budget.Models.Data.Models.SubCategory>
@{
    ViewBag.Title = "SubCategory Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SubCategory Index</h2>

<p>
    @Html.ActionLink("Create New SubCategory","Create")
</p>



        <table class="table-bordered table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategoryID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Create", "Create")
                            @Html.ActionLink("Update", "Edit")
                            @Html.ActionLink("Delete", "Delete")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
